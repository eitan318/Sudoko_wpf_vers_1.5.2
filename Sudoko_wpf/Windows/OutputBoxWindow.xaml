<Window  x:Class="Sudoko_wpf.OutputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OutputBox" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="OutputTextBlock" TextWrapping="Wrap" Margin="0,0,0,10"/>
            <Button x:Name="CopyButton" Content="Copy" Width="100" HorizontalAlignment="Right" Click="CopyButton_Click"/>
        </StackPanel>
    </Grid>
</Window>