<Window x:Class="Sudoko_wpf.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputBox" Height="150" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="PromptTextBlock" Margin="0,0,0,10"/>
            <TextBox x:Name="InputTextBox" Margin="0,0,0,10"/>
            <Button x:Name="OkButton" Content="OK" Width="100" HorizontalAlignment="Right" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
    

