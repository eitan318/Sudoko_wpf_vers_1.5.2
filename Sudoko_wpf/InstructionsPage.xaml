<Page x:Class="Sudoko_wpf.InstructionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="InstructionPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Frame x:Name="InstructionFrame" NavigationUIVisibility="Hidden" Grid.Row="0" />

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button x:Name="BackButton" Content="Back" Click="BackButton_Click" Margin="5" />
            <Button x:Name="NextButton" Content="Next" Click="NextButton_Click" Margin="5" />
            
        </StackPanel>

        <Button x:Name="btn_openning" Click = "OpenningBtn_Click" Grid.Row = "1" Content="BACKTO OPEN" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Grid>
</Page>
